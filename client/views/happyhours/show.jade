h3 {{happyhour.name}}
h4 {{happyhour.neighborhood}}

div(lc-restaurant, business='{{loc}}')

h5 happy hours

table.table.table-bordered.table-responsive(ng-if='title')
  thead
    tr
      th day
      th when
      th what
  tbody
    tr
      td monday
      td {{happyhour.monday[0]=== 'all' ? 'all day' : ((happyhour.monday[0]/60) > 12 ? (happyhour.monday[0]/60 - 12) : (happyhour.monday[0]/60)) +'-'+ (happyhour.monday[1]/60 - 12)}}
      td {{happyhour.monday[2]}}
